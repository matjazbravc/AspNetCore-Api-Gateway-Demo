    // Employee Routes
    {
      "DownstreamPathTemplate": "/api/employee/",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 51261
        }
      ],
      "UpstreamPathTemplate": "/api/employee/",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/employee/getbycompanyid/{id}",
      "DownstreamScheme": "http",
